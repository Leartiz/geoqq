<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/myProfileFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.qubacy.geoqq.ui.application.activity._common.screen.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_mateChatsFragment"
            app:destination="@id/mateChatsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mateChatsFragment"
        android:name="com.qubacy.geoqq.ui.application.activity._common.screen.mate.chats.MateChatsFragment"
        android:label="Mate chats"
        tools:layout="@layout/fragment_mate_chats">
        <action
            android:id="@+id/action_mateChatsFragment_to_myProfileFragment"
            app:destination="@id/myProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/myProfileFragment"
        android:name="com.qubacy.geoqq.ui.application.activity._common.screen.myprofile.MyProfileFragment"
        android:label="My profile"
        tools:layout="@layout/fragment_my_profile"/>

</navigation>