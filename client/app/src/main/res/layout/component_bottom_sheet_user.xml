<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/component_bottom_sheet_user_drag_handle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/component_bottom_sheet_user_image_avatar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintTop_toBottomOf="@id/component_bottom_sheet_user_drag_handle"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large"
        android:scaleType="centerCrop"
        tools:srcCompat="@drawable/ic_launcher_background"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/component_bottom_sheet_user_text_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/component_bottom_sheet_user_image_avatar"
        android:layout_marginTop="@dimen/small_gap_between_components"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        tools:text="Username"/>

    <ScrollView
        android:id="@+id/component_bottom_sheet_user_text_wrapper_about_me"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/component_bottom_sheet_user_text_username"
        app:layout_constraintBottom_toTopOf="@id/component_bottom_sheet_user_button_mate"
        android:layout_marginTop="@dimen/small_gap_between_components"
        android:layout_marginBottom="@dimen/small_gap_between_components">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/component_bottom_sheet_user_text_about_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="5"
            android:ellipsize="end"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse. Duis aute irure dolor in reprehenderit in voluptate velit esse"/>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/component_bottom_sheet_user_button_mate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:text="@string/component_bottom_sheet_user_button_mate_caption_add"/>

</merge>