<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/big_gap_between_components"
    android:paddingEnd="@dimen/big_gap_between_components"
    android:paddingTop="@dimen/big_gap_between_components"
    android:paddingBottom="@dimen/small_gap_between_components">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/component_main_navigation_drawer_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:textColor="?attr/colorOnSurface"
        tools:text="Test"/>

</LinearLayout>