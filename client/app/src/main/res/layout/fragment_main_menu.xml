<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.Geoqq.GeoChat">

        <include
            android:id="@+id/go_menu_option"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.5"
            layout="@layout/component_main_menu_option"
            app:menuOptionTitle="@{@string/go_menu_option}"
            app:menuOptionDescription="@{@string/go_menu_option_description}"
            app:menuOptionBackground="@{@drawable/geo_chat_go_menu_option_background}"
            app:menuOptionRipple="@{@drawable/geo_chat_go_menu_option_foreground}"/>

        <include
            android:id="@+id/profile_menu_option"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/go_menu_option"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/exit_button"
            app:layout_constraintWidth_percent="0.5"
            layout="@layout/component_main_menu_option"
            app:menuOptionTitle="@{@string/profile_menu_option}"
            app:menuOptionDescription="@{@string/profile_menu_option_description}"
            app:menuOptionBackground="@{@drawable/geo_chat_my_profile_menu_option_background}"
            app:menuOptionRipple="@{@drawable/geo_chat_my_profile_menu_option_foreground}"/>

        <include
            android:id="@+id/mates_menu_option"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/go_menu_option"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/exit_button"
            app:layout_constraintWidth_percent="0.5"
            layout="@layout/component_main_menu_option"
            app:menuOptionTitle="@{@string/mates_menu_option}"
            app:menuOptionDescription="@{@string/mates_menu_option_description}"
            app:menuOptionBackground="@{@drawable/geo_chat_mate_menu_option_background}"
            app:menuOptionRipple="@{@drawable/geo_chat_mate_menu_option_foreground}"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:layout_constraintTop_toBottomOf="@id/mates_menu_option"
            app:layout_constraintBottom_toBottomOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.None"
            app:backgroundTint="@color/red_moody"
            app:rippleColor="@color/red_primary"
            android:text="@string/exit_button_caption"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>