<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/component_bottom_sheet_user_scene_transition_collapsed_expanded"
        app:constraintSetStart="@id/component_bottom_sheet_user_scene_collapsed"
        app:constraintSetEnd="@id/component_bottom_sheet_user_scene_expanded"/>

    <ConstraintSet
        android:id="@+id/component_bottom_sheet_user_scene_expanded">

        <Constraint
            android:id="@id/component_bottom_sheet_user_line_content_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/component_bottom_sheet_user_button_mate"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/small_gap_between_components"/>

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/component_bottom_sheet_user_scene_collapsed">

        <Constraint
            android:id="@id/component_bottom_sheet_user_line_content_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/component_bottom_sheet_user_button_mate"
            app:layout_constraintBottom_toTopOf="@id/component_bottom_sheet_user_guideline_horizontal_50"
            android:layout_marginTop="@dimen/small_gap_between_components"/>

    </ConstraintSet>

</MotionScene>